{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <div class="breadcrumb-area pt-205 pb-210" style="background-image: url(img/bg/breadcrumb.jpg)">
        <div class="container">
            <div class="breadcrumb-content text-center">
                <h2>register</h2>
                <ul>
                    <li><a href="#">home</a></li>
                    <li> register </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- register-area start -->
    <div class="register-area ptb-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-12 col-lg-12 col-xl-6 ml-auto mr-auto">
                    <div class="login">
                        <div class="login-form-container">
                            <div class="login-form">
                                <form action="#" method="post">
                                    <input type="text" name="user-name" id="user-name" placeholder="Username">
                                    <input type="password" name="user-password" id="user-password" placeholder="Password">
                                    <input name="user-email" id="user-email" placeholder="Email" type="email">
                                    <div class="button-box">
                                        <button type="button" id="register-button" class="default-btn floatright">Register</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- register-area end -->
{% endblock %}

{% block footerJavascript %}
    <script>
      $(function () {
        $('#register-button').click(function (e) {
          e.preventDefault();

          var data = {
            email: $('#user-email').val(),
            username: $('#user-name').val(),
            password: $('#user-password').val()
          };

          sendRequest('/api/register', 'POST', data, function () {
            console.log(arguments)
          })
        })
      });
    </script>
{% endblock %}